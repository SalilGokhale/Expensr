<resources>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DateTextLowerTheme" >
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:color">@color/black</item>
    </style>

    <style name="DateTextHigherTheme" >
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:color">@color/black</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="android:background">@color/light_grey</item>
        <item name="android:inputType">textCapSentences</item>

        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="cardLowerText" >
        <item name="android:textSize">11sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="spinnerText">
        <item name="android:color">@color/black</item>
        <item name="android:textSize">@dimen/spinner_text_size</item>
    </style>

</resources>
